{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MAF Mutation",
  "scopeName": "source.maf.mutation",
  "patterns": [
    { "include": "#comment" },
    { "include": "#header" },
    { "include": "#data-line" }
  ],
  "repository": {
    "comment": {
      "match": "^#.*$",
      "name": "comment.line.maf"
    },
    "header": {
      "match": "^Hugo_Symbol\\t.+$",
      "name": "meta.header.maf"
    },
    "data-line": {
      "match": "^([^\\t]+)\\t([^\\t]+)\\t([^\\t]+)\\t([^\\t]+)\\t([^\\t]+)\\t([0-9]+)\\t([0-9]+)\\t([+\\-]?)\\t(.+)$",
      "captures": {
        "1": { "name": "entity.name.hugo.maf" },
        "2": { "name": "string.unquoted.entrez.maf" },
        "3": { "name": "string.unquoted.center.maf" },
        "4": { "name": "string.unquoted.build.maf" },
        "5": { "name": "string.unquoted.chrom.maf" },
        "6": { "name": "constant.numeric.start.maf" },
        "7": { "name": "constant.numeric.end.maf" },
        "8": { "name": "keyword.operator.strand.maf" },
        "9": { "name": "meta.remaining.maf" }
      }
    }
  }
}
