{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PED",
  "scopeName": "source.ped",
  "patterns": [
    { "include": "#data-line" }
  ],
  "repository": {
    "data-line": {
      "match": "^([^\\t\\s]+)[\\t\\s]+([^\\t\\s]+)[\\t\\s]+([^\\t\\s]+)[\\t\\s]+([^\\t\\s]+)[\\t\\s]+([12])[\\t\\s]+([012-]+)(.*)$",
      "captures": {
        "1": { "name": "entity.name.family.ped" },
        "2": { "name": "entity.name.individual.ped" },
        "3": { "name": "string.unquoted.father.ped" },
        "4": { "name": "string.unquoted.mother.ped" },
        "5": { "name": "constant.numeric.sex.ped" },
        "6": { "name": "constant.numeric.phenotype.ped" },
        "7": { "name": "meta.genotypes.ped" }
      }
    }
  }
}
